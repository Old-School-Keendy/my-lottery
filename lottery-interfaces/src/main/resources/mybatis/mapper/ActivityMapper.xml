<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.keendy.lottery.infrastructure.dao.IActivityDao">
    <resultMap id="activity" type="cn.keendy.lottery.infrastructure.po.Activity">
        <id column="id" property="id"/>
        <id column="activity_id" property="activityId" jdbcType="BIGINT"/>
        <id column="activity_name" property="activityName" jdbcType="VARCHAR"/>
        <id column="activity_desc" property="activityDesc" jdbcType="VARCHAR"/>
        <id column="begin_date_time" property="beginDateTime" jdbcType="TIMESTAMP"/>
        <id column="end_date_time" property="endDateTime" jdbcType="TIMESTAMP"/>
        <id column="stock_count" property="stockCount" jdbcType="INTEGER"/>
        <id column="take_count" property="takeCount" jdbcType="INTEGER"/>
        <id column="state" property="state" jdbcType="INTEGER"/>
        <id column="creator" property="creator" jdbcType="VARCHAR"/>
        <id column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <id column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="base_column">
        id
                , activity_id, activity_name, activity_desc, begin_date_time, end_date_time, stock_count, take_count,
         state, creator, create_time, update_time
    </sql>

    <insert id="insert" parameterType="cn.keendy.lottery.infrastructure.po.Activity">
        INSERT INTO activity
                activity_id, activity_name, activity_desc,begin_date_time, end_date_time,
                 stock_count, take_count, state, creator
        VALUES
                (#{activityId}, #{activityName}, #{activityDesc}, #{beginDateTime}, #{endDateTime},
                #{stockCount}, #{takeCount}, #{state}, #{creator})
    </insert>

    <select id="selectOneByActivityId" parameterType="java.lang.Long" resultMap="activity">
        SELECT
        <include refid="base_column"/>
        FROM activity
        WHERE activity_id = #{activityId}
    </select>
</mapper>