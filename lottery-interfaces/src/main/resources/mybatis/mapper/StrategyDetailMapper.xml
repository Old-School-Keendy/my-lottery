<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.keendy.lottery.infrastructure.dao.IStrategyDetailDao">

    <resultMap id="strategyDetail" type="cn.keendy.lottery.infrastructure.po.StrategyDetail">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <id column="strategy_id" property="strategyId" jdbcType="BIGINT"/>
        <id column="award_id" property="awardId" jdbcType="BIGINT"/>
        <id column="award_count" property="awardCount" jdbcType="INTEGER"/>
        <id column="award_rate" property="awardRate" jdbcType="DECIMAL"/>
        <id column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <id column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="base_column">
        id, strategy_id, award_id, award_count, award_rate, create_time, update_time
    </sql>

    <select id="selectListByStrategyId" parameterType="java.lang.Long" resultMap="strategyDetail">
        SELECT <include refid="base_column"/>
        FROM strategy_detail
        WHERE strategyId = #{strategyId}
    </select>

</mapper>
